	void valores(){
		
		//X-BURGUER
	    v[ 1] = 7;
	    
	    //X-SALADA 
	    v[ 2] = 8;
	    
	    //X-BACON
	    v[ 3] = 9;
	    
	    //X-EGG
	    v[ 4] = 10;
	    
	    //CACHORRO QUENTE 
	    v[ 5] = 9;
	    
	    //X-NEGAMALUKA  
	    v[ 6] = 10;
	    
	    //X-NEGAMALUKA SIMPLES 
	    v[ 7] = 9;
	    
	    //X-TUDO 
	    v[ 8] = 12;
	    
	    //X NEGA MALUKA BIG 
	    v[ 9] = 15;
	    
	    //BACON LOVE, REFRI+FRITAS
	    v[10] = 22;
	    
	    //NEGAMALUKA ARTESANAL SIMPLES
	    v[11] = 11.99;
	    
	    //NEGAMALUKA CROCANTE, FRITAS 
	    v[12] = 18.99;
	    
	    //NEGAMALUKA BIG, FRITAS
	    v[13] = 26.99;
	    
	    //2 X-SALADA + REFRI 500ml
	    v[14] = 15.99;
	    
	    //COMBO X-NEGA MALUKA
	    v[15] = 15.99;
	    
	    //X-SALADA + FRITAS
	    v[16] = 12;
	    
	    //COMBO X-TUDO
	    v[17] = 19.99;
	    
	    //COMBO EGG BACON
	    v[18] = 15.99;
	    
	    //DESATIVADO 
	    v[19] = 0;
	    
	    //DESATIVADO 
	    v[20] = 0;
	    
	    //X-SALADA, FRITAS+REFFRIGERANTE
	    v[21] = 14.99;
	    
	    //ANÉIS DE CEBOLA
	    v[22] = 10;
	    
	    //BATATA FRITA PEQUENA 166g
	    v[23] = 4.99;
	    
	    //BATATA FRITA MÉDIA 250g 
	    v[24] = 9.99;
	    
	    //BATATA FRITA GRANDE 500g
	    v[25] = 14.99;
	    
	    //REFRIGERANTE 1,5L
	    v[26] = 0;
	    
	    //REFRIGERANTE LATA
	    v[27] = 4;
	    
	    //REFRIGERANTE 600ml 
	    v[28] = 6;
	    
	    //REFRIGERANTE KUAT 2L
	    v[29] = 6;
	    
	    //COCA-COLA 2L 
	    v[30] = 9;
	    
	    //ADICIONAIS
	    v[31] = 2;
	    
	    //ADICIONAL CARNE ARTESANAL
	    v[32] = 6;
	}
	
    void pedido()
	{
	   r = item;
	   printf("Quantidade -> ");
	   qtde[r] = getche();
	   qtde[r] = qtde[r] - 48;
	   system("cls");
	   total = total + (qtde[r] * v[r]); 
	}
